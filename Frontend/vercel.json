{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://questweaver-819u.onrender.com/api/$1" },
    { "source": "/health",   "destination": "https://questweaver-819u.onrender.com/health" },
    { "source": "/(.*)",     "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" },
        { "key": "Access-Control-Allow-Origin", "value": "https://quest-weaver.vercel.app" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization, Content-Type" }
      ]
    }
  ]
}
